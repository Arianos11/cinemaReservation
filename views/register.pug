extends layout
block content
  h1= title
  p Welcome to #{title}
  - var n = 0
  while n < errors.length || 0
    p #{errors[n].msg}
    - n++
  - if(success_msg != '')
        div(class="pop pop__success") #{success_msg}
  - if(error_msg != '')
        div(class="pop pop__error") #{error_msg}
  form(method="post")
    p
        label login
        input(type="text" name="login" value= login != undefined ? login : '')
    p
        label e-mail
        input(type="text" name="email" value= email != undefined ? email : '')
    p
        label password
        input(type="password" name="password" value= password != undefined ? password : '')
    p
        label Confirm password
        input(type="password" name="passwordConfirm" value= passwordConfirm != undefined ? passwordConfirm : '')
    p
        input(type="submit" value="Register")
    p if you have account you can 
        a(href='/user/login') login here