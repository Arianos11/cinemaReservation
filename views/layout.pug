doctype html

mixin item(title, url)
  li(class="nav--item")
    a(href=url class=path == url ? 'nav--item--link active' : 'nav--item--link')=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul(class="nav--container")
        +item('Cinema', "/")
        +item('Movies', "/movies")
        +item('Serials on big screen', "/serials")
        +item('Login', "/login")
    block content
